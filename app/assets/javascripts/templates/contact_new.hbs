<div class='contact-details'>
  <h1 class='contact-heading'>add new contact</h1>

  <div class='form-horizontal'>
    <div class='form-group'>
      <label for='first-name' class='col-lg-2 control-label'>first name:</label>

      <div class="col-lg-10">
        {{input type='text' value=firstName id='first-name' classNames='form-control' placeholder='enter first name'}}
      </div>
    </div>

    <div class='form-group'>
      <label for='last-name' class='col-lg-2 control-label'>last name:</label>

      <div class="col-lg-10">
        {{input type='text' value=lastName id='last-name' classNames='form-control' placeholder='enter last name'}}
      </div>
    </div>

    <div class='form-group'>
      <div class='col-lg-offset-2 col-lg-10'>
        <button id='save-new-contact' class='btn btn-success' {{action 'saveContact'}}>save</button>
        <button id='save-new-contact' class='btn btn-danger' {{action 'cancelEditing'}}>cancel</button>
      </div>
    </div>
  </div>
</div>
