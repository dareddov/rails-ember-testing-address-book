<h2 class="contacts-heading">Contacts</h2>

<table class='contacts-list table'>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone(s)</th>
    </tr>
  </thead>

  <tbody>
    {{#each}}
    <tr class='contact-item'>
      <td>{{first_name}}</td>
      <td>{{last_name}}</td>
      <td>{{email}}</td>
      <td>{{phone}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>